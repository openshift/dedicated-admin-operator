        - ''
        resources:
        - namespaces
        verbs:
        - get
      - apiGroups:
        - build.openshift.io
        resources:
        - builds
        - buildconfigs
        verbs:
        - list
      - apiGroups:
        - apps
        resources:
        - daemonsets
        - deployments
        - replicasets
        - statefulsets
        verbs:
        - list
      - apiGroups:
        - apps.openshift.io
        resources:
        - deploymentconfigs
        verbs:
        - list
      - apiGroups:
        - ''
        resources:
